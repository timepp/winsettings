    new AutoRunTask("mactype", G.path_greensoft + "\\mactype\\MacTray.exe", "", false),
    //new RunAtLogonTask("ultrasearch", G.path_greensoft + "\\ultrasearch\\ultrasearch.exe", true),

    {
