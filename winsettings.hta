        },
        run: function () {
            tps.file.CreateShortcut(G.path_profile + "\\Links\\G40.lnk", "\\\\stcsrv-g40.fareast.corp.microsoft.com\\Share\\tongjunhui");
        }
    },
    {
        name: "Add %GS%\cmdline to PATH",
        check: function () {
